<krpano version="1.0.8" onstart="action(loadfirstscene);startup();">

	<security>
	    <allowdomain domain="*" />
	</security>

	<!-- text style for hover info -->
	<textstyle name="hoverstyle" origin="center" yoffset="200" textalign="center" background="false" border="false" fontsize="30" textcolor="0xFFFFFF" bold="false" effect="glow(0xFFFFFF,0.7,4,2);glow(0x000000,1,4,2);dropshadow(3,45,0x000000,2,0.6);" showtime="0.1" fadetime="0.2" fadeintime="0.2" />



	<autorotate enabled="true"
        waittime="1.5"
        speed="3.0"
        />
	 
	<events 
		onloadcomplete= "js(panoLoaded())" 
		onmousedown="action(globalmousedown)" 
		onviewchange="action(viewchange)"
		/> 
	 
	<action name="globalmousedown">		
		set(plugin[directions].visible,false);
		set(autorotate.enabled,false);
	</action>

	<action name="viewchange">
        set(currentX,get(view.hlookat));
	  	add(currentX,180);
		js(soundadjust(get(view.hlookat),get(view.fov)));
	</action>

	<action name="loadfirstscene">
		loadscene(doorIsClosed, null, MERGE);
	</action>

	<action name="loadsecondscene">
		loadscene(doorIsOpen, null, MERGE);
	</action>

	<action name="initialize">
		set(plugin[directions].visible,true);
		tween(plugin[directions].alpha,1.0,3)
	</action>
	                   


		<progress
			showwait="none"
			/>

		<view 
			hlookat="224.0"
		  fov="90.0"
		  fovmax="180.0"
		  fovmin="5.0"
		  />

		<control usercontrol = "all"
			mousetype="drag2d"
		 	keycodesin  =""
		 	keycodesout =""
		 	/>
<scene name="doorIsClosed">
	<image><cube url="../images/panos/chemicalroom/pano_%s.jpg" /> </image>
	<image devices="Desktop">      <cube url="../images/panos/chemicalroom/pano_%s.jpg" /> </image>
    <image devices="Mobile">      <cube url="../images/panos/chemicalroom/mobile_%s.jpg" /> </image>
	<image devices="Tablet">      <cube url="../images/panos/chemicalroom/pano_%s.jpg" /> </image>

		<hotspot name="engineroom" url="../images/hotspot.gif"
			ath="13"
			atv="0"
		
			alpha="0"
			width="30"
			height="60"
			borderwidth="0.0" borderwidthhover="1"
			bordercolor="0xFFFFFF" bordercolorhover="0xFFFFFF"
			onclick="js(loadsecondscene)"
			scale="1.0"
	/>

</scene>

<scene name="doorIsOpen" onstart="">
		<image>
    <left  url="../images/panos/chemicalroom/pano_l.jpg" />
    <front url="../images/panos/chemicalroom/pano_f.png" />
    <right url="../images/panos/chemicalroom/pano_r.jpg" />
    <back  url="../images/panos/chemicalroom/pano_b.jpg" />
    <up    url="../images/panos/chemicalroom/pano_u.jpg" />
    <down  url="../images/panos/chemicalroom/pano_d.jpg" />
		</image>
	
	<image devices="Desktop">    
    <left  url="../images/panos/chemicalroom/pano_l.jpg" />
    <front url="../images/panos/chemicalroom/pano_f.png" />
    <right url="../images/panos/chemicalroom/pano_r.jpg" />
    <back  url="../images/panos/chemicalroom/pano_b.jpg" />
    <up    url="../images/panos/chemicalroom/pano_u.jpg" />
    <down  url="../images/panos/chemicalroom/pano_d.jpg" />
	 </image>

	 		<hotspot name="engineroom" url="../images/hotspot.gif"
			ath="335"
			atv="-7"
		
			alpha="0.0"
			width="500.0"
			height="450.0"
			borderwidth="0.0" borderwidthhover="1"
			bordercolor="0xFFFFFF" bordercolorhover="0xFFFFFF"
			onclick="lookto(335,0,5,tween(easeOutQuad,4),true,true);set(hotspot[engineroom].enabled,false);"
			scale="1.0"
	/>


    <image devices="Mobile">      <cube url="../images/panos/chemicalroom/mobile_%s.jpg" /> </image>
	<image devices="Tablet">      <cube url="../images/panos/chemicalroom/pano_%s.jpg" /> </image>


</scene>


		<plugin name="directions"
			url="../images/panos/platform/hotspots/directions.png"
			capture="false"
			align="top"
			edge="top"
			y="60"
			alpha="0.0"
			visible="true"
			/>


		<hotspot name="exit" url="../images/hotspot.gif"
			ath="30"
			atv="-2"
		    distorted="true"
		    keep="true"
			alpha="0.0"
			width="100.0"
			height="300.0"
			borderwidth="0.0" borderwidthhover="1"
			bordercolor="0xFFFFFF" bordercolorhover="0xFFFFFF"
			onclick="js(newPage(subhanger))"
			scale="1.0"
			/>

		<hotspot name="yellowbarrel" url="../images/hotspot.gif"
			ath="250"
			atv="28"
		    distorted="true"
		    keep="true"
			alpha="0"
			width="220.0"
			height="95.0"
			borderwidth="0.0" borderwidthhover="1"
			bordercolor="0xFFFFFF" bordercolorhover="0xFFFFFF"
			onclick="lookto(get(currentX),0,180,smooth(),true,true,js(launchVideo(video/doc_content/Darla_poisoned_720)));js(setCache(get(view.hlookat),90))"
			scale="1.0"
			/>

		<hotspot name="BlueGif"
			url="../images/icons/gif_icon3.gif"
			ath="250"
			atv="10"
		    distorted="true"
		    keep="true"
			alpha=".3"
			width="140"
			height="140"
			borderwidth="0.0" borderwidthhover="1"
			bordercolor="0xFFFFFF" bordercolorhover="0xFFFFFF"
			onclick="lookto(get(currentX),0,180,smooth(),true,true,js(launchVideo(video/doc_content/Darla_poisoned_720)));js(setCache(get(view.hlookat),90))"
			scale="1.0"
			/>
		

		<!-- <hotspot name="cabinet" 
			url="../images/panos/chemicalroom/hotspots/cabinet.png"
			ath="54.4"
			atv="-5.1"
			distorted="true"
			keep="true"
			alpha="0"
			onclick="tween(alpha,1)"
			scale="1.05"
			/> -->

		<hotspot name="cabinet_closed" url="../images/hotspot.gif"
			ath="0"
			atv="0"
			distorted="true"
			alpha="1"
			onclick="js(cabinet_closed());set(hotspot[cabinet_open].alpha,1);set(hotspot[cabinet_open].enabled,true);"

			scale="1"
		/>

		<hotspot name="cabinet_open" url="../images/panos/chemicalroom/hotspots/cabinet.png"
			ath="54.4"
			atv="-5.1"
			distorted="true"
			alpha="0"
			enabled="false"
			onclick="js(cabinet_closed(close));set(hotspot[cabinet_open].alpha,0);set(hotspot[cabinet_open].enabled,false);"

			scale="1.05"
		/>


		<data name="cssdata1">
			p {
				color: #ffffff;
				fontFamily: Helvetica, Arial, sans-serif;
				fontSize: 16px;				
				leading: 7;
			}
		</data>
							

		
	<!--<include url="drill.xml" />-->

</krpano>