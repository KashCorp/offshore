<krpano version="1.0.8" onstart="startup();">

	<security>
	    <allowdomain domain="*" />
	</security>

	<!-- text style for hover info -->
	<textstyle name="hoverstyle" origin="center" yoffset="200" textalign="center" background="false" border="false" fontsize="30" textcolor="0xFFFFFF" bold="false" effect="glow(0xFFFFFF,0.7,4,2);glow(0x000000,1,4,2);dropshadow(3,45,0x000000,2,0.6);" showtime="0.1" fadetime="0.2" fadeintime="0.2" />



	<autorotate enabled="true"
        waittime="1.5"
        speed="3.0"
        />

  <!--  -->
	 
	<events 
		onmousedown="action(globalmousedown)"
		onviewchange="action(viewchange)"
		onloadcomplete= "js(panoLoaded())" 
		
		/> 
	 
	<action name="globalmousedown">	

		set(plugin[directions].visible,false);
		set(autorotate.enabled,false);
	</action>

	<action name="initialize">
		set(plugin[directions].visible,true);
		tween(plugin[directions].alpha,1.0,3);
	</action>
	                   

	  <action name="viewchange">
	  	set(currentX,get(view.hlookat));
	  	add(currentX,180);
		js(soundadjust(get(view.hlookat)));
	  </action>

		<progress
			showwait="none"
			/>

		<view 
			hlookat="270.0"
		  fov="90.0"
		  fovmax="90.0"
		  fovmin="15.0"
		  />

		<control usercontrol = "all"
			mousetype="drag2d"
		 	keycodesin  =""
		 	keycodesout =""
		 	/>
<!-- 	
	 	<image>
				<cube url="../images/panos/boat2/pano_%s.png" />
			<mobile>
				<cube url="../images/panos/boat2/mobile/pano_%s.png" />
			</mobile>
		</image>
-->

		<image>
    <left  url="pano_l.png" />
    <front url="pano_f.png" />
    <right url="pano_r.png" />
    <back  url="pano_b.png" />
    <up    url="pano_u.png" />
    <down  url="pano_d.jpg" />
		</image>
		
		
		<image devices="Desktop">     <cube url="../images/panos/boat2/pano_%s.png"   /> </image>
		<image devices="Mobile">      <cube url="../images/panos/boat2/mobile_%s.png" /> </image>
		<image devices="Tablet">      <cube url="../images/panos/boat2/pano_%s.png" /> </image>

		<plugin name="directions"
			url="../images/panos/platform/hotspots/directions.png"
			capture="false"
			align="top"
			edge="top"
			y="60"
			alpha="1.0"
			visible="true"
			/>

		<hotspot name="passage_01" url="../images/hotspot.gif"
			ath="5.15"
			atv="0"
			distorted="true"
			alpha="0.0"
			height="50.0"
			onclick="js(newPage(passage_subhanger_down.php))"
			onhover="js(hoverSound()) "
			onout="js(resetHoverSound());"
			scale="5.0"
			/>

		<hotspot name="passage_02" url="../images/hotspot.gif"
			ath="270"
			atv="0"
			distorted="true"
			alpha="0.0"
			height="50.0"
			onclick="js(newPage(passage_theater.php))"
			onhover="js(hoverSound()) "
			onout="js(resetHoverSound());"
			scale="5.0"
			/>

		<hotspot name="passage_03" url="../images/hotspot.gif"
			ath="180"
			atv="0"
			distorted="true"
			alpha="0.0"
			height="50.0"
			onclick="js(newPage(outside_stairs_down.php))"
			onhover="js(hoverSound()) "
			onout="js(resetHoverSound());"
			scale="3.0"
			/>

		<hotspot name="ladder" url="../images/hotspot.gif"
			ath="105"
			atv="-20"
			distorted="true"
			alpha="0.0"
			height="120.0"
			onclick="js(newPage(lowerplatform_open.php))"
			onhover="js(hoverSound()) "
			onout="js(resetHoverSound());"
			scale="5.0"
			/>		



 		<hotspot name="videoflag_01"
			url="plugins/textfield.swf"
			ath="220"
			children="false"
			edge="righttop"
			background="false"
			capture="false"
			color="0xffffff"
			handcursor="true"
			height="30"
			html="[h3] WHAT FUTURE?[h3]"
			css="data:flag"
			autoheight="false"
			vcenter="true"
			width="100"
            onclick="lookto(get(currentX),0,get(view.fov),smooth(),true,true,js(launchVideo(video/alaska_rosemary_01.webm)));js(setCache(get(view.hlookat),90))"
			
		/>



				<data name="flag">
			h3 {
				color: #ffffff;
				font-family: Helvetica, Arial, sans-serif;
				fontFamily: Helvetica, Arial, sans-serif;
				fontSize: 10;
				line-height: 30px;
				textAlign: center;
				text-align: center;
			}
		</data>

		<data name="cssdata1">
			p {
				color: #ffffff;
				fontFamily: Helvetica, Arial, sans-serif;
				fontSize: 16px;				
				leading: 7;
			}
		</data>
							

		
