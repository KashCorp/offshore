			url="../images/panos/platform/hotspots/directions.png"
			capture="false"
			align="top"
			edge="top"
			y="60"
			alpha="0.0"
			visible="true"
			/>
		
		<!-- Passage 1: Chemical Room  -->

		<hotspot name="passage_01" url="../images/hotspot.gif"
			ath="5.15"
			atv="0"
			distorted="true"
			alpha="0.0"
			height="50.0"
      onclick="lookto(0,0,10,smooth(),true,true,js(newPage(passage_chemicalroom.php)));)"
			scale="5.0"
			capture="false"
			/>


 		<hotspot name="passage_01_text"
			url="plugins/textfield.swf"
			ath="10.5"
			atv="-10"
			children="false"
			edge="righttop"
			background="false"
			capture="false"
			color="0xffffff"
			handcursor="true"
			height="30"
