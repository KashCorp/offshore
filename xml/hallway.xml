		<hotspot name="passage_02" url="../images/hotspot.gif"
			ath="270"
			atv="0"
			distorted="true"
			alpha="0.0"
			height="50.0"
      onclick="lookto(270,0,5,smooth(),true,true,js(newPage(passage_theater.php)));)"
			onout="js(resetHoverSound());"
			scale="5.0"
			capture="false"
			/>

 		<hotspot name="passage_02_text"
			url="plugins/textfield.swf"
			ath="280"
			atv="-6"
			children="false"
			edge="righttop"
			background="false"
			capture="false"
			color="0xffffff"
