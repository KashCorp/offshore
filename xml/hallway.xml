			ath="105"
			atv="-40"
			distorted="true"
			alpha="0.0"
			height="120.0"
			onclick="js(newPage(lowerplatform_closed.php))"
			onhover="js(hoverSound()) "
			onout="js(resetHoverSound());"
			scale="5.0"
