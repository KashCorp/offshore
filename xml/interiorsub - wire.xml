<krpano version="1.0.8" onstart="startup();">

<security>
    <allowdomain domain="*" />
</security>

	<!-- text style for hover info -->
	<textstyle name="hoverstyle" origin="center" yoffset="200" textalign="center" background="false" border="false" fontsize="30" textcolor="0xFFFFFF" bold="false" effect="glow(0xFFFFFF,0.7,4,2);glow(0x000000,1,4,2);dropshadow(3,45,0x000000,2,0.6);" showtime="0.1" fadetime="0.2" fadeintime="0.2" />

	<action name="startup">
		loadscene(platform, null, ignorekeep, BLEND(1))
	</action>

	<autorotate enabled="true"
	            waittime="1.5"
	            speed="3.0"
	            />
	 
	<events onmousedown="action(globalmousedown)" /> 
	 
	<action name="globalmousedown">		
		set(plugin[directions].visible,false);
		set(autorotate.enabled,false);
	</action>

	<action name="initialize">
		set(plugin[directions].visible,true);
		tween(plugin[directions].alpha,1.0,3)
	</action>
	                   
	<scene name="platform" onstart="">

		<progress
			showwait="none"
			/>

		<view 
			hlookat="84.0"
		  fov="65.0"
		  fovmax="90.0"
		  fovmin="45.0"
		  />

		<control usercontrol = "all"
			mousetype="drag2d"
		 	keycodesin  =""
		 	keycodesout =""
		 	/>
	 	<image>
				<cube url="../images/panos/interiorsub-wire/pano_%s.jpg" />
			<mobile>
				<cube url="../images/panos/interiorsub-wire/mobile/pano_%s.jpg" />
			</mobile>
		</image>

		<image devices="Desktop">     <cube url="../images/panos/interiorsub-wire/pano_%s.jpg"   /> </image>
		<image devices="Mobile">      <cube url="../images/panos/interiorsub-wire/mobile_%s.jpg" /> </image>
		<image devices="Tablet">      <cube url="../images/panos/interiorsub-wire/pano_%s.jpg../images/panos/interiorsub-wire/pano_%s.jpg" /> </image>

		<plugin name="directions"
			url="../images/panos/platform/hotspots/directions.png"
			capture="false"
			align="top"
			edge="top"
			y="60"
			alpha="1.0"
			visible="true"
			/>
			
			
